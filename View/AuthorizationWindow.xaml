<Window x:Class="Homework_12_notMVVM.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_12_notMVVM"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="250" Width="400" ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="TextStyle">
            <Setter Property="ItemsControl.FontFamily" Value="Arial" />
            <Setter Property="ItemsControl.FontSize" Value="20"/>                        
        </Style>
    </Window.Resources>
    
    
   <StackPanel Orientation="Vertical" Margin="30">
       <TextBlock Text="Войти как: " Style="{StaticResource TextStyle}" HorizontalAlignment="Center"/>
        <ComboBox x:Name="ChooseWorker" Width="300" Margin="10" Style="{StaticResource TextStyle}"
                  SelectedIndex="0">
            <TextBlock Text="Консультант"/>
            <TextBlock Text="Менеджер"/>
        </ComboBox>
        <Button x:Name="EntryButton" Content="Авторизация" Style="{StaticResource TextStyle}" Width="300" Margin="20" 
                Click="EntryButton_Click"/>
    </StackPanel>
   
</Window>
